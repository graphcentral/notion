{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "ES5",                    
    "module": "CommonJS",                    
    "lib": ["ESNext"],                     
    "isolatedModules": true,               
    "strict": true,                        
    "noImplicitAny": true,                 
    "strictNullChecks": true,              
    "strictFunctionTypes": true,           
    "strictBindCallApply": true,           
    "strictPropertyInitialization": true,  
    "noImplicitThis": true,                
    "alwaysStrict": true,                  
    "noFallthroughCasesInSwitch": true,    

    "moduleResolution": "node",           
    "esModuleInterop": true                
  }
}
